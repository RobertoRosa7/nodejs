<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Portal de notícias</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/favicon.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="images/logo.png" />
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="/">HOME</a></li>
					</ul>
				</div>
			</div>
		</nav>


	    <div class="container">
			
	    	<div class="row">
	    		<div class="col-md-8">
	    			<div class="noticia_wrapper">
						<a href="newsletters?read=<%= data[0].id_noticia %>" class="noticia_titulo"><%= data[0].titulo %></a>
		    			<span class="noticia_autor"><%= data[0].autor %></span>
		    			<span class="noticia_data"><%= data[0].data_criacao %></span>
		    			<br />
		    			<p class="noticia_resumo"><%= data[0].resumo %></p>
		    		</div>
		    	</div>
	    		<div class="col-md-4">
	    			<div class="noticia_wrapper">
						<a href="newsletters?read=<%= data[1].id_noticia %>" class="noticia_titulo"><%= data[1].titulo %></a>
						<span class="noticia_autor"><%= data[1].autor %></span>
						<span class="noticia_data"><%= data[1].data_criacao %></span>
						<br />
						<p class="noticia_resumo"><%= data[1].resumo %></p>
		    		</div>
		    	</div>
	    	</div>

	    	<div class="row">
				<% for(let i = 2; i < data.length; i++) { %>

	    		<div class="col-md-4">
	    			<div class="noticia_wrapper">
						<a href="newsletters?read=<%= data[i].id_noticia %>" class="noticia_titulo"><%= data[i].titulo %></a>
		    			<span class="noticia_autor"><%= data[i].autor%></span>
		    			<span class="noticia_data"><%= data[i].data_criacao %></span>
		    			<br />
		    			<p class="noticia_resumo"><%= data[i].resumo %></p>
		    		</div>
		    	</div>
				<% }; %>

	    	<div class="row ver_mais">
				<a class="btn btn-default"href="/news">Ver todas as notícias</a>
	    	</div>

	    </div>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>